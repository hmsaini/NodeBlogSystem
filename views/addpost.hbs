      <form method="post" action="/posts/add" enctype="mutltipart/form-data">
    <div class="form-group">
      Title:
      <input type="text" name="title"  class="form-control"  > 
    </div>
    <div class="form-group">
      Category:
      <select class="form-control" name="category">
{{#each categories}}
